<div class="div-new">
	<p>
		Name:
	</p>
	<p>
		<%= f.text_field :name %>
	</p>
</div>
<div class="div-new">
	<p>
		Buy Day:
	</p>
	<p>
		<%= f.date_select :buy_day,
    {:order => [:day, :month, :year],
      :start_year => 2014,
      :end_year => Time.now.year},
    {:class => "select-year"}%>
	</p>
</div>
<div class="div-new">
	<p>
		Quantity:
	</p>
	<p>
		<% if @product.buy_day %>
		<%= f.number_field :quantity, min: 1, max: 20 %>
		<% else %>
		<%= f.number_field :quantity, min: 1, max: 20, value: 1 %>
		<% end %>
	</p>
</div>
<div class="div-new">
	<p>
		Price:
	</p>
	<p>
		<%= f.text_field :price %>
	</p>
</div>
<div class="div-new">
	<%= f.submit :Save %>
	<%= link_to "Back to Main", root_path, class: "link-button" %>
</div>
