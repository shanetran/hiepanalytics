<h1>Taọ Mới Mặt Hàng</h1>
<%= form_for :product , url: products_path, method: :post do |f| %>
<div class="div-new">
	<p>
		Tên Sản Phẩm:
	</p>
	<p>
		<%= f.text_field :name %>
	</p>
</div>
<div class="div-new">
	<p>
		Ngày Mua:
	</p>
	<p>
		<%= f.date_select :buy_day,
    {:order => [:day, :month, :year],
      :start_year => 2014,
      :end_year => Time.now.year},
    {:class => "select-year"}%>
	</p>
</div>
<div class="div-new">
	<p>
		Số Lượng:
	</p>
	<p>
		<%= f.number_field :quantity, min: 1, max: 20, value: 1 %>
	</p>
</div>
<div class="div-new">
	<p>
		Giá Tiền:
	</p>
	<p>
		<%= f.text_field :price %>
	</p>
</div>
<div class="div-new">
	<%= f.submit 'Lưu Sản Phẩm' %>
	<%= link_to "Trở Về", root_path, class: "link-button" %>
</div>
<% end %>